#include<iostream>
#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int* arr=new int[3];
        for(int i=0;i<3;i++){
            cin>>arr[i];
        }
        int n;
        cin>>n;
        sort(arr,arr+3);
        int ld=arr[2]-arr[0];
        int lld=arr[2]-arr[1];
        int to=ld+lld;
        int r=n-to;
        if(r%3==0){
            cout<<"YES"<<endl;
        }else{
            cout<<"NO"<<endl;
        }
        
    
    }
}
